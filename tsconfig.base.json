{
  "description": "The base configuration for all packages.",
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "target": "ES2021"
  }
}
