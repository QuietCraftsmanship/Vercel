{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [
    "turbo-cache-key.json",
    "package.json",
    "test/lib/**",
    "utils/build.mjs"
  ],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputLogs": "new-only",
      "outputs": ["dist/**"]
    },
    "vitest-unit": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "vitest-run": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "vitest-e2e": {
      "dependsOn": ["build"],
      "outputLogs": "new-only",
      "cache": false // these tests hit live vercel.com deployments, and thus cannot be cached
    },
    "vitest-e2e-node-20": {
      "dependsOn": ["build"],
      "outputLogs": "new-only",
      "cache": false // these tests hit live vercel.com deployments, and thus cannot be cached
    },
    "test-unit": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "test-dev": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "test-cli": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "test-e2e": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "test-next-local": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "test": {
      "dependsOn": ["build"],
      "outputLogs": "new-only"
    },
    "type-check": {}
  }
}
