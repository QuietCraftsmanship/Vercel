{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false
  },
  "include": ["src/**/*", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
